@charset "utf-8";
/* CSS Document */

/* 全局CSS定义 */
html {margin: 0;padding: 0;background:#F8F8F8; }
body {font-family: Arial, Helvetica, sans-serif;font-size: 12px;margin:0; padding:0; }
table {border-collapse: collapse;border-spacing: 0;}
div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,blockquote,p{padding:0; margin:0;}
ol,ul {list-style:none;}
li{list-style-type:none;}
img{vertical-align:top;border:0;}
h1,h2,h3,h4,h5,h6{font-size:inherit; font-weight:normal;}
address,cite,code,em,i{font-weight:normal; font-style:normal;}
.clearfix{*zoom:1;}
.clearfix:after{display:block; overflow:hidden; clear:both; height:0; visibility:hidden; content:".";}

.fl{ float:left;}
.fr{float:right;}


input[disabled],input:disabled,textarea[disabled],textarea:disabled{
	background:#F8F8F8;
}
/* IE6 Using Javascript to add CSS class "disabled" */
* html input.disabled{
	background:#F8F8F8;
}

.custring{
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis;
text-overflow: ellipsis;
-ms-text-overflow: ellipsis;
-o-text-overflow: ellipsis;
-moz-binding: url("ellipsis.xml#ellipsis");
   }